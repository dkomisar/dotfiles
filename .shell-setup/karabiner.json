{
    "title": "My Mods",
    "rules": [
        {
            "description": "CapsLock -> Escape if alone, Control if not",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "type": "basic",
                    "conditions": []
                }
            ]
        }
    ]
}
